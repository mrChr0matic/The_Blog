<%- include("template/header.ejs")%>
<div class="security-box"> 
    <div class="security-div">
        <h2 style="z-index: 2; position: relative;;">Create Account</h2>
        <form action="/create" method="post" class="security-form">
            <div class="security-input">
                <span class="icon"></span>
                <input type="text" name="newUser" required autocomplete="off">  
                <label >Create Username</label>
            </div>
            <div class="security-input">
                <span class="icon"></span>
                <input type="password" name="newPassword" required autocomplete="off">
                <label >Create Password</label>
            </div>
            <div class="security-button-div">
                <button class="security-button" type="submit">Create Account</button>
            </div>
        </form>
    </div>
</div>


